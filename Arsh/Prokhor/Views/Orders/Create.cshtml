@using Prokhor.Data
@model Prokhor.Data.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductCount" class="control-label"></label>
                <input asp-for="ProductCount" class="form-control" />
                <span asp-validation-for="ProductCount" class="text-danger"></span>
            </div>
            <div>
                <label>Product</label><br />
                @Html.DropDownListFor(model => model.ProductId, ViewBag.Products as SelectList, new { @class = "form-control" })
            </div>
            <div>
                <label>ShopBag</label><br />
                @Html.DropDownListFor(model => model.ShopBagId, ViewBag.ShopBags as SelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
